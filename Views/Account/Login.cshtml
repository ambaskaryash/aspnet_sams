@model Webclient.Models.LoginModel
@{
	Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<div class="content-wrapper">
	<div class="content-header row"></div>
	<div class="content-body">
		<section class="row flexbox-container">
			<div style="margin-bottom:10%" class="col-xl-8 col-11 d-flex justify-content-center">
				<div class="col-sm-7">
					<div class="row m-0">
						<div class="col-lg-12 col-12 p-0">
                            <div class="card rounded-0 mb-0 px-2">
                                <p style="color:red; margin-top:10px">@ViewData["ErrorTxt"]</p>

                                <span class="px-2" style="font-size:20px">Welcome back, please login to your account.</span>
                              
                                <div class="card-content">
                                    <div class="card-body pt-1">
                                        <form method="POST" action="/Account/Login" class="login-form">
                                            <span style="font-size:10px;color:#D3CED3">Username</span>
                                            <fieldset class="form-label-group form-group position-relative has-icon-left">
                                                @Html.TextBoxFor(m => m.LoginID, new { @class = "form-control", @placeholder = "Username" })
                                                <div class="form-control-position">
                                                    <i class="feather icon-user"></i>
                                                </div>
                                            </fieldset>
                                            <span style="font-size:10px;color:#D3CED3">Password</span>
                                            <fieldset class="form-label-group position-relative has-icon-left">
                                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
                                                <div class="form-control-position">
                                                    <i class="feather icon-lock"></i>
                                                </div>
                                            </fieldset>
                                            <div class="form-group d-flex justify-content-between align-items-center">
                                                <div class="text-left">
                                                    <fieldset class="checkbox">
                                                        <div class="vs-checkbox-con vs-checkbox-primary">
                                                            @Html.CheckBoxFor(m => m.RememberMe)
                                                            <span class="vs-checkbox">
                                                                <span class="vs-checkbox--check">
                                                                    <i class="vs-icon feather icon-check"></i>
                                                                </span>
                                                            </span>
                                                            <span class="">Remember me</span>
                                                        </div>
                                                    </fieldset>
                                                </div>

                                                <button type="submit" class="btn btn-primary float-right btn-inline">Login</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
						</div>
					</div>
				</div>
			</div>
		</section>
	</div>
</div>
