<style type="text/css">
    .image {
        width: 125px;
        height: 115px;
        margin-top: 2px;
        top: 0;
        left: 0;
        border: 1px solid #ddd;
        z-index: 1;
    }

    .profileInput {
        cursor: pointer;
        height: 115px;
        left: 0;
        opacity: 0;
        position: absolute;
        top: 4px;
        width: 100%;
        z-index: 2;
    }

    .fileUpload-div-profile {
        position: absolute;
        top: 51px;
        margin-left: 107%;
        overflow: hidden;
    }

    span.upload-text {
        font-size: 12px;
        color: #0092d0;
        cursor: pointer;
        text-decoration: underline;
        margin-left: 50px
    }

    .modal-lg {
        width: 40% !important;
    }
</style>
<div id="fundApprovalSetup">
    <div class="modal-header">
        <div class="modal-title">Notice Posting </div>
        <div class="header-button-group">
            <div class="icon-cros" title="Close" ng-click="closeModal()">X</div>
        </div>

    </div>

    <div class="modal-body">

        <div class="content-panel light">

            <div style="margin-top:5px" class="row">
                <div class="col-sm-12">
                    <div class="form-group">
                        <label class="col-sm-3 control-label" style="float:left">Details<span class="required-field">*</span></label>
                        <div class="col-sm-9" style="float:left">
                            <textarea class="form-control validator" style="height:180px;" ng-model="BusinessModel.Details" required />
                        </div>
                    </div>
                </div>
            </div>
            <div style="margin-top:5px" class="row">
                <div class="col-sm-12">
                    <div class="form-group">
                        <label class="col-sm-3 control-label" style="float:left">Image</label>
                        <div class="col-sm-2" style="float:left">
                            <img ng-if="BusinessModel.ImageFileName == null || BusinessModel.ImageFileName == ''" src="~/Areas/AttendanceTracking/Content/no-image-doc.png" class="image" />
                            <img ng-if="BusinessModel.ImageFileName != null && BusinessModel.ImageFileName != ''" src="{{BusinessModel.ImagePath}}" class="image" />

                            <div class="fileUpload-div-profile">
                                <span class="upload-text" ng-if="BusinessModel.ImageFileName == null">Upload</span>
                                <span class="upload-text" ng-if="BusinessModel.ImageFileName != null">Change</span>
                                <input type="file" id="noticeImageData" class="upload profileInput" onchange="angular.element(this).scope().uploadNoticeImage()" />
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal-footer" style="clear: both;">
        <div class="col-sm-12" style="text-align: right;">
            <button type="button" class="btn btn-success" ng-click="Save()">Save</button>
        </div>
    </div>

</div>



